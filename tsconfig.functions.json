{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist-functions",
    "rootDir": "./src",
    "lib": ["ES2020"],
    "types": ["node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/services/**/*",
    "src/lib/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "src/utils/analytics.ts",
    "src/utils/geolocation.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "node_modules"
  ]
}