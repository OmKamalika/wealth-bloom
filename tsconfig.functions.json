{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist-functions",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "sourceMap": false
  },
  "include": [
    "src/services/**/*",
    "src/types/**/*",
    "src/utils/**/*"
  ],
  "exclude": [
    "src/utils/analytics.ts",
    "src/utils/geolocation.ts",
    "src/lib/supabase.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "node_modules",
    "dist",
    "dist-functions"
  ]
}